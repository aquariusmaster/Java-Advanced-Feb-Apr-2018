<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="url" value="${jdbc.url}" />
    </bean>

    <bean id="jdbcProps"
          class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="location" value="classpath:/jdbc.properties" />
    </bean>

    <bean id="jdbcHandler" class="com.flowergarden.dao.impl.JdbcHandler">
        <constructor-arg ref="dataSource"/>
    </bean>

    <bean id="bouquetExtractor" class="com.flowergarden.dao.impl.GeneralBouquetExtractor">
    </bean>

    <bean id="bouquetDao" class="com.flowergarden.dao.impl.GeneralBouquetJdbcDao">
        <constructor-arg ref="jdbcHandler"/>
        <constructor-arg ref="bouquetExtractor"/>
    </bean>

    <bean id="flowerExtractor" class="com.flowergarden.dao.impl.GeneralFlowerExtractor">
    </bean>

    <bean id="flowerDao" class="com.flowergarden.dao.impl.GeneralFlowerJdbcDao">
        <constructor-arg ref="jdbcHandler"/>
        <constructor-arg ref="flowerExtractor"/>
    </bean>

</beans>